<Window x:Class="GenteFit_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenteFit_WPF"
        mc:Ignorable="d"
        Title="GenteFit" Height="550" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Columna fija de navegación -->
        <StackPanel Grid.Column="0" Background="LightGray">
            <Button Content="Reservar Actividades" Margin="10,10,10,0" Click="BtnReservas_Click"/>            
            <Button Content="Mostrar Salas" Margin="10,5,10,10" Click="BtnSala_Click" RenderTransformOrigin="0.501,-0.36"/>
            <!--
            <Button Content="Vista 3" Margin="10" Click="BtnVista3_Click"/>
            -->
        </StackPanel>

        <!-- Aquí se mostrarán las vistas -->
        <ContentControl Grid.Column="1" x:Name="VistaPrincipal">
            <ContentControl.Content>
                <Grid>
                    <Image Source="pack://application:,,,/GenteFit_WPF;component/Assets/logoGenteFit.png"
                           Width="300" Height="300"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                </Grid>
            </ContentControl.Content>
        </ContentControl>
    </Grid>
</Window>
