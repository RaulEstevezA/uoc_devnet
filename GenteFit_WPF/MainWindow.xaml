<Window x:Class="GenteFit_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenteFit_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!-- Columna fija de botones -->
            <ColumnDefinition Width="*" />
            <!-- Vistas -->
        </Grid.ColumnDefinitions>

        <!-- Columna fija de navegación -->
        <StackPanel Grid.Column="0" Background="LightGray">
            <Button Content="Vista 1" Margin="10" Click="BtnVista1_Click"/>
            <Button Content="Vista 2" Margin="10" Click="BtnVista2_Click"/>
            <Button Content="Vista 3" Margin="10" Click="BtnVista3_Click"/>
        </StackPanel>

        <!-- Aquí se mostrarán las vistas -->
        <ContentControl Grid.Column="1" x:Name="VistaPrincipal"/>
    </Grid>
</Window>
