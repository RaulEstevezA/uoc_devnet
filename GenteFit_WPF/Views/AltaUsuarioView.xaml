<UserControl x:Class="GenteFit_WPF.Views.AltaUsuarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <StackPanel Width="300">

            <TextBlock Text="Alta de Usuario" FontSize="20" Margin="0 0 0 20"/>

            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameTextBox" Margin="0 0 0 10"/>

            <TextBlock Text="Email login"/>
            <TextBox x:Name="EmailUsuarioTextBox" Margin="0 0 0 10"/>

			<TextBlock Text="ContraseÃ±a"/>
			<PasswordBox x:Name="PasswordTextBox" Margin="0 0 0 10"/>

            <TextBlock Text="Rol"/>
            <ComboBox x:Name="RolComboBox" Margin="0 0 0 10">
                <ComboBoxItem Content="ADMINISTRADOR" Tag="1"/>
                <ComboBoxItem Content="ENCARGADO" Tag="2"/>
                <ComboBoxItem Content="RECEPCIONISTA" Tag="3"/>
            </ComboBox>

            <Button Content="Guardar"
                    Width="120"
                    Margin="0 20 0 0"
                    Click="BtnGuardar_Click"/>

        </StackPanel>
    </Grid>

</UserControl>
