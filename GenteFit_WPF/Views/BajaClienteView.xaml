<UserControl x:Class="GenteFit_WPF.Views.BajaClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <StackPanel Width="350" HorizontalAlignment="Left">

            <TextBlock Text="Baja de Cliente" FontSize="20" Margin="0 0 0 20"/>

            <!-- BUSQUEDAS -->
            <TextBlock Text="Buscar por ID"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="BuscarIdTextBox" Width="200"/>
                <Button Content="Buscar" Width="100" Margin="10 0 0 0"
                        Click="BuscarPorIdButton_Click"/>
            </StackPanel>

            <TextBlock Text="Buscar por Email"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="BuscarEmailTextBox" Width="200"/>
                <Button Content="Buscar" Width="100" Margin="10 0 0 0"
                        Click="BuscarPorEmailButton_Click"/>
            </StackPanel>

            <TextBlock Text="Buscar por Usuario"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="BuscarUsuarioTextBox" Width="200"/>
                <Button Content="Buscar" Width="100" Margin="10 0 0 0"
                        Click="BuscarPorUsuarioButton_Click"/>
            </StackPanel>

            <Separator Margin="0 20 0 20"/>

            <!-- INFO SOLO LECTURA -->
            <TextBlock Text="ID"/>
            <TextBox x:Name="IdTextBox" IsReadOnly="True" Margin="0 0 0 10"/>

            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameTextBox" IsReadOnly="True" Margin="0 0 0 10"/>

            <TextBlock Text="Nombre"/>
            <TextBox x:Name="NombreTextBox" IsReadOnly="True" Margin="0 0 0 10"/>

            <TextBlock Text="Apellidos"/>
            <TextBox x:Name="ApellidosTextBox" IsReadOnly="True" Margin="0 0 0 20"/>

            <Button Content="Eliminar Cliente"
                    Background="Red" Foreground="White"
                    Width="180"
                    HorizontalAlignment="Left"
                    Click="EliminarClienteButton_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
