<UserControl x:Class="GenteFit_WPF.Views.EliminarActividadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20">

        <TextBlock Text="Eliminar actividad"
                   FontSize="20"
                   Margin="0 0 0 20"/>

        <TextBlock Text="Buscar por ID"/>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="BuscarIdTextBox" Width="150"/>
            <Button Content="Buscar"
                    Margin="10 0 0 0"
                    Click="BuscarActividad_Click"/>
        </StackPanel>

        <TextBlock Text="Nombre"/>
        <TextBox x:Name="NombreTextBox" Width="200" IsReadOnly="True"/>

        <Button Content="Eliminar actividad"
                Margin="0 20 0 0"
                Width="200"
                Click="EliminarActividad_Click"/>

    </StackPanel>

</UserControl>
