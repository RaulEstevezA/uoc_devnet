<UserControl x:Class="GenteFit_WPF.Views.GestionSesionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SUBMENÚ HORIZONTAL -->
        <StackPanel Orientation="Horizontal" Background="#EEEEEE" Margin="10">

            <Button Content="Alta Sesión"
                    Margin="0 0 10 0"
                    Click="BtnAltaSesion_Click"/>

            <Button Content="Mostrar Sesiones"
                    Margin="0 0 10 0"
                    Click="BtnMostrarSesiones_Click"/>


            <Button Content="Modificar Sesión"
                    Margin="0 0 10 0"
                    Click="BtnModificarSesion_Click"/>

            <!-- Pendiente de decidir si se incluye esta funcionalidad (ELIMINAR)
            <Button Content="Eliminar Sesión"
                    Margin="0 0 10 0"
                    Click="BtnEliminarSesion_Click"/>
            -->
            
        </StackPanel>

        <!-- CONTENIDO DINÁMICO -->
        <ContentControl Grid.Row="1"
                        x:Name="SesionesContentPresenter"/>
    </Grid>
</UserControl>


