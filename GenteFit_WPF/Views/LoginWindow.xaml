<Window x:Class="GenteFit_WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso | GenteFit" Height="350" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" >

            <Image Source="pack://application:,,,/GenteFit_WPF;component/Assets/logoGenteFit.png"
                   Width="120" Height="120"
                   Margin="0,0,0,15"/>

            <TextBlock Text="Usuario" />
            <TextBox x:Name="TxtUsername" Margin="0,0,0,10"/>

            <TextBlock Text="Password" />
            <PasswordBox x:Name="TxtPass" Margin="0,0,0,15"/>

            <Button Content="Entrar"
                    Height="30"
                    Click="BtnEntrar_Click"/>
        </StackPanel>
    </Grid>
</Window>
