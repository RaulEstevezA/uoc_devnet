<UserControl x:Class="GenteFit_WPF.Views.MisReservasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Mis Reservas"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 15"/>

            <ListBox x:Name="ListaMisReservas"
                     SelectionChanged="ListaMisReservas_SelectionChanged"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     Height="350"/>
        </StackPanel>
    </Grid>
</UserControl>
