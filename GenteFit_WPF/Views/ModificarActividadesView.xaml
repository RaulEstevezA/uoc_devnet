<UserControl x:Class="GenteFit_WPF.Views.ModificarActividadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20">

        <TextBlock Text="Modificar actividad"
                   FontSize="20"
                   Margin="0 0 0 20"/>

        <TextBlock Text="Buscar por ID"/>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="BuscarIdTextBox" Width="150"/>
            <Button Content="Buscar" Margin="10 0 0 0"
                    Click="BuscarActividad_Click"/>
        </StackPanel>

        <TextBlock Text="ID"/>
        <TextBox x:Name="IdTextBox" Width="200" IsReadOnly="True"/>

        <TextBlock Text="Nombre"/>
        <TextBox x:Name="NombreTextBox" Width="200"/>

        <TextBlock Text="Duracion (minutos)"/>
        <TextBox x:Name="DuracionTextBox" Width="200"/>

        <TextBlock Text="Plazas maximas"/>
        <TextBox x:Name="PlazasTextBox" Width="200"/>

        <Button Content="Guardar cambios"
                Width="200"
                Margin="0 20 0 0"
                Click="GuardarCambios_Click"/>

    </StackPanel>

</UserControl>
