<UserControl x:Class="GenteFit_WPF.Views.ModificarClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <StackPanel Width="350" HorizontalAlignment="Left">

            <!-- Titulo -->
            <TextBlock Text="Modificar Cliente" FontSize="20" Margin="0 0 0 20"/>

            <!-- BUSQUEDAS -->
            <TextBlock Text="Buscar por ID"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="BuscarIdTextBox" Width="200"/>
                <Button x:Name="BuscarPorIdButton" Content="Buscar" Width="100" Margin="10 0 0 0"
                        Click="BuscarPorIdButton_Click"/>
            </StackPanel>

            <TextBlock Text="Buscar por Email"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="BuscarEmailTextBox" Width="200"/>
                <Button x:Name="BuscarPorEmailButton" Content="Buscar" Width="100" Margin="10 0 0 0"
                        Click="BuscarPorEmailButton_Click"/>
            </StackPanel>

            <TextBlock Text="Buscar por Usuario"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="BuscarUsuarioTextBox" Width="200"/>
                <Button x:Name="BuscarPorUsuarioButton" Content="Buscar" Width="100" Margin="10 0 0 0"
                        Click="BuscarPorUsuarioButton_Click"/>
            </StackPanel>


            <!-- FORMULARIO -->
            <Separator Margin="0 20 0 20"/>

            <TextBlock Text="ID"/>
            <TextBox x:Name="IdTextBox" IsReadOnly="True" Margin="0 0 0 10"/>

            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameTextBox" Margin="0 0 0 10"/>

            <TextBlock Text="DNI"/>
            <TextBox x:Name="DniTextBox" Margin="0 0 0 10"/>

            <TextBlock Text="Nombre"/>
            <TextBox x:Name="NombreTextBox" Margin="0 0 0 10"/>

            <TextBlock Text="Apellido 1"/>
            <TextBox x:Name="Apellido1TextBox" Margin="0 0 0 10"/>

            <TextBlock Text="Apellido 2"/>
            <TextBox x:Name="Apellido2TextBox" Margin="0 0 0 20"/>

            <Button x:Name="GuardarCambiosButton"
                    Content="Guardar cambios"
                    Width="150"
                    HorizontalAlignment="Left"
                    Click="GuardarCambiosButton_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
