<UserControl x:Class="GenteFit_WPF.Views.ModificarSalasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20">

        <TextBlock Text="Modificar sala"
                   FontSize="20"
                   Margin="0 0 0 20"/>

        <TextBlock Text="Buscar por ID"/>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="BuscarIdTextBox" Width="150"/>
            <Button Content="Buscar"
                    Margin="10 0 0 0"
                    Click="Buscar_Click"/>
        </StackPanel>

        <TextBlock Text="Id"/>
        <TextBox x:Name="IdTextBox" Width="200" IsReadOnly="True"/>

        <TextBlock Text="Nombre"/>
        <TextBox x:Name="NombreTextBox" Width="200"/>

        <TextBlock Text="Aforo max"/>
        <TextBox x:Name="AforoTextBox" Width="200"/>

        <CheckBox x:Name="DisponibleCheckBox"
                  Content="Sala disponible"
                  Margin="0 10 0 0"/>

        <Button Content="Guardar cambios"
                Width="200"
                Margin="0 20 0 0"
                Click="Guardar_Click"/>
    </StackPanel>

</UserControl>
