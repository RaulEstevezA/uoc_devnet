<UserControl x:Class="GenteFit_WPF.Views.MostrarSalasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <DataGrid x:Name="SalasDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                <DataGridTextColumn Header="Aforo max" Binding="{Binding AforoMax}" />
                <DataGridCheckBoxColumn Header="Disponible" Binding="{Binding Disponible}" />
            </DataGrid.Columns>

        </DataGrid>
    </Grid>

</UserControl>
