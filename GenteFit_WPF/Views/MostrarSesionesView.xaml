<UserControl x:Class="GenteFit_WPF.Views.MostrarSesionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">

        <TextBlock Text="Listado de sesiones"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 10"/>

        <DataGrid x:Name="SesionesDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,40,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="ActividadId" Binding="{Binding ActividadId}" />
                <DataGridTextColumn Header="InstructorId" Binding="{Binding InstructorId}" />
                <DataGridTextColumn Header="SalaId" Binding="{Binding SalaId}" />
                <DataGridTextColumn Header="FechaInicio" Binding="{Binding FechaInicio}" />
                <DataGridTextColumn Header="FechaFin" Binding="{Binding FechaFin}" />
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>


