<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Acción -->
    <record id="action_gente_fit_cliente" model="ir.actions.act_window">
        <field name="name">Clientes GenteFit</field>
        <field name="res_model">gente.fit.cliente</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú principal -->
    <menuitem id="gente_fit_root_menu"
              name="GenteFit"
              sequence="10"/>

    <!-- Submenú Clientes -->
    <menuitem id="gente_fit_cliente_menu"
              name="Clientes"
              parent="gente_fit_root_menu"
              action="action_gente_fit_cliente"
              sequence="20"/>

    <!-- Vista tree -->
    <record id="gente_fit_cliente" model="ir.ui.view">
        <field name="name">gente.fit.cliente.tree</field>
        <field name="model">gente.fit.cliente</field>
        <field name="arch" type="xml">
            <list>
                <field name="id_cliente"/>
                <field name="dni"/>
                <field name="nombre"/>
                <field name="apellido1"/>
                <field name="apellido2"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Vista form -->
    <record id="gente_fit_cliente_form" model="ir.ui.view">
        <field name="name">gente.fit.cliente.form</field>
        <field name="model">gente.fit.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="id_cliente"/>
                        <field name="dni"/>
                        <field name="nombre"/>
                        <field name="apellido1"/>
                        <field name="apellido2"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
